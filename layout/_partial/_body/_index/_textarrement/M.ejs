                                    <%= page.title %>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                    
                <div class="dearmsdan-index-content">
                    <article>
                        <% if(page.excerpt) {%>
                        <%- page.excerpt %>
                        <%}  else{ %>
                        <%- page.content %>
                        <% } %>
                    </article>
                <a style="position: unset;" href="<%- url_for(page.path) %>"><div class="dearmsdan-more">阅读更多...</div></a>
                    <div class="dearmsdan-post-Statistics">
                        <a><%- date(page.date, "YYYY年MM月DD日") %></a>
                        <% if (page.categories && page.categories.length){ %>
                            <%- list_categories(page.categories, {
                                show_count: false,
                                class: '',
                                style: 'none',
                                separator: ''
                            }) %>
                        <% } %>
                        <% if (page.tags && page.tags.length){ %>
                            <%- list_tags(page.tags, {
                                show_count: false,
                                class: '',
                                style: 'none',
                                separator: ' '
                            }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
            
